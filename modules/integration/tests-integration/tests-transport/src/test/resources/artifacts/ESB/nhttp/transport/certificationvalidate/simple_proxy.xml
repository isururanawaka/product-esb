<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy     name="SampleProxy"
               transports="https,http"
               statistics="disable"
               trace="disable"
               startOnLoad="true">
    <target>
        <inSequence>
            <log level="full"/>
            <property name="POST_TO_URI" value="hello" scopre="axis2"/>
            <send>
                <endpoint>
                    <address uri="https://localhost:8443"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>
</definitions>